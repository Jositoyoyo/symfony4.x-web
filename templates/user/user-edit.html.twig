{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        {% if app.request.attributes.get('_route') == 'user-edit'%}
            <a href="{{ path('user-delete', { 'username': user.username } ) }}" class="btn btn-danger">Borrar</a>
            <small>Se borraran tambien los items</small>
        {% endif %}    
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Username'} }) }}
            {{ form_errors(form.username) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.name) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.lastname) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.email) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
         <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
        <button type="submit" class="btn btn-primary">Crear Carpeta</button>
        {{ form_widget(form) }}
        {{ form(form) }}

        {{ form_end(form) }}
    </div>
{% endblock %}